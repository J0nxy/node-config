package wireless

# Wireless: Ein adhoc-Interface und ein AP mit SSID: Freifunk wird angelegt

config wifi-iface 'wifi_freifunk'
	option device 'radio0'
	option network 'freifunk'
	option mode 'ap'
	option ssid 'Freifunk'

config wifi-iface 'wifi_mesh'
	option device 'radio0'
	option network 'mesh'
	option mode 'adhoc'
	option ssid '42:42:42:42:42:42'
	option bssid '42:42:42:42:42:42'
	option mcast_rate '12000'

